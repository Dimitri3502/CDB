<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
  <servlet>
    <servlet-name>Dashboard</servlet-name>
    <servlet-class>com.excilys.training.servlets.DashboardServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Dashboard</servlet-name>
    <url-pattern>/dashboard</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>AddComputer</servlet-name>
    <servlet-class>com.excilys.training.servlets.AddComputerServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AddComputer</servlet-name>
    <url-pattern>/addComputer</url-pattern>
  </servlet-mapping>
  
    <servlet>
    <servlet-name>DeleteComputer</servlet-name>
    <servlet-class>com.excilys.training.servlets.DeleteServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DeleteComputer</servlet-name>
    <url-pattern>/deleteComputer</url-pattern>
  </servlet-mapping>
  
  <welcome-file-list>
    <welcome-file>dashboard</welcome-file>
  </welcome-file-list>
  <error-page>
    <error-code>404</error-code>
    <location>/static/views/404.html</location>
  </error-page>
  <error-page>
    <error-code>403</error-code>
    <location>/static/views/403.html</location>
  </error-page>
  <error-page>
    <error-code>500</error-code>
    <location>/static/views/500.html</location>
  </error-page>
</web-app>